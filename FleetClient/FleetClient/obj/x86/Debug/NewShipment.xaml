<Page
    x:Class="FleetClient.NewShipment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FleetClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel>
            <Button x:ConnectionId='2' x:Name="BackButton"                    Style="{StaticResource NavigationBackButtonNormalStyle}"/>
            <Pivot x:ConnectionId='3' x:Name="rootPivot" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"                                              >
                <PivotItem Header="Shipment Details" HorizontalAlignment="Stretch" Margin="12,0,-64,-138" VerticalAlignment="Stretch">
                    <StackPanel>
                        <TextBox x:ConnectionId='43' x:Name="shipmentRate" Header= "Shipment Rate" Margin="0,24,0,0" MaxLength="32" Width="400" HorizontalAlignment="Left" InputScope="Number" />
                        <TextBox x:ConnectionId='44' x:Name="commodity" Header= "Commodity" Margin="0,24,0,0" MaxLength="32" Width="400" HorizontalAlignment="Left" />
                        <TextBox x:ConnectionId='45' x:Name="weight" Header= "Weight" Margin="0,24,0,0" MaxLength="32" Width="400" HorizontalAlignment="Left" />
                        <ComboBox x:ConnectionId='46' x:Name="Freighttype" Header= "Freight Type" Margin="0,24,0,0"  Width="400" HorizontalAlignment="Left" >
                            <x:String>FTL</x:String>
                            <x:String>LTL</x:String>
                        </ComboBox>
                    </StackPanel>
                </PivotItem>
                <PivotItem Header="Customer" HorizontalAlignment="Stretch" Margin="12,0,-64,-138" VerticalAlignment="Stretch">
                    <StackPanel>
                        <TextBox x:ConnectionId='36' x:Name="cName" Header= "Name" Margin="0,24,0,0" MaxLength="32" Width="400" HorizontalAlignment="Left" InputScope="PersonalFullName"/>
                    <TextBox x:ConnectionId='37' x:Name="cPhoneNumber" Header="Phone Number" Margin="0,24,0,0" MaxLength="15" Width="400" HorizontalAlignment="Left" InputScope="TelephoneNumber" />
                    <TextBox x:ConnectionId='38' x:Name="cEmail" Header="Email" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                    <TextBox x:ConnectionId='39' x:Name="cAddress" Header="Address" PlaceholderText="Address" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                    <RelativePanel>
                        <TextBox x:ConnectionId='41' x:Name="cCity" PlaceholderText="City" Margin="0,24,0,0" MaxLength="50" Width="200" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                        <ComboBox x:ConnectionId='42' x:Name="cProvince" PlaceholderText="State" Margin="24,24,0,0"  Width="100" RelativePanel.RightOf="cCity">
                            <x:String>AB</x:String>
                            <x:String>BC</x:String>
                            <x:String>MB</x:String>
                            <x:String>NB</x:String>
                            <x:String>NL</x:String>
                            <x:String>NS</x:String>
                            <x:String>ON</x:String>
                            <x:String>PE</x:String>
                            <x:String>QC</x:String>
                            <x:String>SK</x:String>
                            <x:String>NT</x:String>
                            <x:String>NU</x:String>
                            <x:String>YT</x:String>
                        </ComboBox>
                    </RelativePanel>
                    <TextBox x:ConnectionId='40' x:Name="cZipCode" PlaceholderText="Zip Code" Margin="0,24,0,0" MaxLength="6" Width="400" HorizontalAlignment="Left" InputScope="Number" />
                    <StackPanel Orientation="Horizontal">
                       
                    </StackPanel>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="Origin">
                <StackPanel>
                    <TextBox x:ConnectionId='26' x:Name="oName" Header= "Name" Margin="0,24,0,0" MaxLength="32" Width="400" HorizontalAlignment="Left" InputScope="PersonalFullName"/>
                    <TextBox x:ConnectionId='27' x:Name="oPhoneNumber" Header="Phone Number" Margin="0,24,0,0" MaxLength="15" Width="400" HorizontalAlignment="Left" InputScope="TelephoneNumber" />
                    <TextBox x:ConnectionId='28' x:Name="oEmail" Header="Email" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                    <TextBox x:ConnectionId='29' x:Name="oAddress" Header="Address" PlaceholderText="Address" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                    <RelativePanel>
                        <TextBox x:ConnectionId='34' x:Name="oCity" PlaceholderText="City" Margin="0,24,0,0" MaxLength="50" Width="200" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                        <ComboBox x:ConnectionId='35' x:Name="oProvince" PlaceholderText="State" Margin="24,24,0,0"  Width="100" RelativePanel.RightOf="oCity">
                            <x:String>AB</x:String>
                            <x:String>BC</x:String>
                            <x:String>MB</x:String>
                            <x:String>NB</x:String>
                            <x:String>NL</x:String>
                            <x:String>NS</x:String>
                            <x:String>ON</x:String>
                            <x:String>PE</x:String>
                            <x:String>QC</x:String>
                            <x:String>SK</x:String>
                            <x:String>NT</x:String>
                            <x:String>NU</x:String>
                            <x:String>YT</x:String>
                        </ComboBox>
                    </RelativePanel>
                    <TextBox x:ConnectionId='30' x:Name="oZipCode" PlaceholderText="Zip Code" Margin="0,24,0,0" MaxLength="6" Width="400" HorizontalAlignment="Left" InputScope="Number" />
                    <TextBox x:ConnectionId='31' x:Name="OriginReferenceNumber" PlaceholderText="Origin Reference Number" Margin="0,24,0,0" MaxLength="6" Width="400" HorizontalAlignment="Left" InputScope="Number" />
                        <StackPanel Orientation="Vertical" >
                            <DatePicker x:ConnectionId='32' x:Name="oDate" Header="Origin date" Margin="0,24,10,0" Width="400" />
                            <TimePicker x:ConnectionId='33' x:Name="oTime" Header="Origin time" MinuteIncrement="15"  Margin="0,24,0,0" Width="400" />
                        </StackPanel>
                    </StackPanel>
            </PivotItem>
            <PivotItem Header="Destination">
                <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,-188" VerticalAlignment="Stretch">
                    <TextBox x:ConnectionId='16' x:Name="destName" Header= "Name" Margin="0,24,0,0" MaxLength="32" Width="400" HorizontalAlignment="Left" InputScope="PersonalFullName"/>
                    <TextBox x:ConnectionId='17' x:Name="destPhoneNumber" Header="Phone Number" Margin="0,24,0,0" MaxLength="15" Width="400" HorizontalAlignment="Left" InputScope="TelephoneNumber" />
                    <TextBox x:ConnectionId='18' x:Name="destEmail" Header="Email" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                    <TextBox x:ConnectionId='19' x:Name="destAddress" Header="Address" PlaceholderText="Address" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                    <RelativePanel>
                        <TextBox x:ConnectionId='24' x:Name="destCity" PlaceholderText="City" Margin="0,24,0,0" MaxLength="50" Width="200" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                        <ComboBox x:ConnectionId='25' x:Name="destProvince" PlaceholderText="State" Margin="24,24,0,0"  Width="100" RelativePanel.RightOf="destCity">
                            <x:String>AB</x:String>
                            <x:String>BC</x:String>
                            <x:String>MB</x:String>
                            <x:String>NB</x:String>
                            <x:String>NL</x:String>
                            <x:String>NS</x:String>
                            <x:String>ON</x:String>
                            <x:String>PE</x:String>
                            <x:String>QC</x:String>
                            <x:String>SK</x:String>
                            <x:String>NT</x:String>
                            <x:String>NU</x:String>
                            <x:String>YT</x:String>
                        </ComboBox>
                    </RelativePanel>
                    <TextBox x:ConnectionId='20' x:Name="destZipCode" PlaceholderText="Zip Code" Margin="0,24,0,0" MaxLength="6" Width="400" HorizontalAlignment="Left" InputScope="Number" />
                    <TextBox x:ConnectionId='21' x:Name="DestinationReferenceNumber" PlaceholderText="Destination Reference Number" Margin="0,24,0,0" MaxLength="6" Width="400" HorizontalAlignment="Left" InputScope="Number" />
                        <StackPanel Orientation="Vertical">
                            <DatePicker x:ConnectionId='22' x:Name="destDate" Header="Destination date" Margin="0,24,10,0" Width="400" />
                            <TimePicker x:ConnectionId='23' x:Name="destTime" Header="Destination time" MinuteIncrement="15"  Margin="0,24,0,0" Width="400" />
                        </StackPanel>    
                    </StackPanel>
            </PivotItem>
            <PivotItem Header="Driver">
                <StackPanel>
                    <TextBox x:ConnectionId='7' x:Name="dName" Header= "Name" Margin="0,24,0,0" MaxLength="32" Width="400" HorizontalAlignment="Left" InputScope="PersonalFullName"/>
                    <TextBox x:ConnectionId='8' x:Name="dPhoneNumber" Header="Phone Number" Margin="0,24,0,0" MaxLength="15" Width="400" HorizontalAlignment="Left" InputScope="TelephoneNumber" />
                    <TextBox x:ConnectionId='9' x:Name="dEmail" Header="Email" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                    <TextBox x:ConnectionId='10' x:Name="dAddress" Header="Address" PlaceholderText="Address" Margin="0,24,0,0" MaxLength="50" Width="400" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                    <RelativePanel>
                        <TextBox x:ConnectionId='14' x:Name="dCity" PlaceholderText="City" Margin="0,24,0,0" MaxLength="50" Width="200" HorizontalAlignment="Left" InputScope="EmailNameOrAddress" />
                        <ComboBox x:ConnectionId='15' x:Name="dProvince" PlaceholderText="State" Margin="24,24,0,0"  Width="100" RelativePanel.RightOf="dCity">
                            <x:String>AB</x:String>
                            <x:String>BC</x:String>
                            <x:String>MB</x:String>
                            <x:String>NB</x:String>
                            <x:String>NL</x:String>
                            <x:String>NS</x:String>
                            <x:String>ON</x:String>
                            <x:String>PE</x:String>
                            <x:String>QC</x:String>
                            <x:String>SK</x:String>
                            <x:String>NT</x:String>
                            <x:String>NU</x:String>
                            <x:String>YT</x:String>
                        </ComboBox>
                    </RelativePanel>
                    <TextBox x:ConnectionId='11' x:Name="dZipCode"  PlaceholderText="Zip Code" Margin="0,24,0,0" MaxLength="6" Width="400" HorizontalAlignment="Left" InputScope="Number" />
                    <ComboBox x:ConnectionId='12' x:Name="truckid" PlaceholderText="Truck Id" Margin="0,24,0,0"  Width="400" HorizontalAlignment="Left"  />
                    <ComboBox x:ConnectionId='13' x:Name="trailerid" PlaceholderText="Trailer Id" Margin="0,24,0,0"  Width="400" HorizontalAlignment="Left" />
                    </StackPanel>
            </PivotItem>
        </Pivot>
            <Button x:ConnectionId='4' x:Name="NextButton"  Content="Next"                          Margin="12,20" />
            <Button x:ConnectionId='5' x:Name="SaveButton"  Content="Save Shipment"                    Visibility="Collapsed" Margin="12,20" />
            <TextBlock x:ConnectionId='6' x:Name="success"/>
        </StackPanel>
    </Grid>
</Page>

