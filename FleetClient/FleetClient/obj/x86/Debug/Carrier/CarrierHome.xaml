            <PivotItem Header="Assigned Shipment Orders">
                <local:AssignShipmentOrderGrid x:ConnectionId='6' x:Name="assignedshipmentordergridcontrol"></local:AssignShipmentOrderGrid>
            </PivotItem>
            <PivotItem Header="Map">

            </PivotItem>
            <PivotItem Header="Accounts">

            </PivotItem>
        </Pivot>
        <Button x:ConnectionId='3' Content="Assign Shipment"                    HorizontalAlignment="Left" Margin="191,8,0,0" VerticalAlignment="Top" ></Button>
        <Button x:ConnectionId='4' x:Name="newtruck" Content="New Truck"                        HorizontalAlignment="Left" Margin="327,8,0,0" VerticalAlignment="Top" ></Button>
        <Button x:ConnectionId='5' x:Name="newtrailer" Content="New Triler"                          HorizontalAlignment="Left" Margin="431,8,0,0" VerticalAlignment="Top" ></Button>
