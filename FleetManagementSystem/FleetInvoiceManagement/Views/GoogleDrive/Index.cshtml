@{
    ViewData["Title"] = "List of invoices fils present in Google Drive";
}

@model IEnumerable<FileData> 

<script src="~/css/js/vendor/jquery-1.12.4.min.js"></script>
<script>
    $(document).ready(function () {
        // Handler for .ready() called.
        $('html, body').animate({
            scrollTop: $('#homecontainer').offset().top
        }, 'slow');
    });
</script>

<div style="height:800px;width:100%;" id="homecontainer">

    <div style="height:100px;width:100%;margin-top:25px;"></div>
    <h2>@ViewData["Title"]</h2>


    @if (Model.Count() > 0)
    {
        <dl>

            @foreach (var i in Model)
            {
                <dt>@i.FileName</dt>
                <dd> - @i.FileId</dd>

            }

        </dl>
    }
    else
    {
        <h4>No invoice file present at root directory.</h4>
    }

</div>
